<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>PDF Converter</title>
        <meta name="description" content="Convert your documents to PDF format easily">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="style.css">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="converter-wrapper">
                <h1>PDF Converter</h1>
                <h3 class="subtitle">Convert word, excel, ppt, txt files into PDFs</h3>
                
                <div class="upload-area" id="dropZone">
                    <form id="uploadForm" action="/convert" method="POST" enctype="multipart/form-data">
                        <label class="file-input-label">
                            <input type="file" name="file" id="pdfFile" accept=".doc,.docx,.txt,.xls,.xlsx,.ppt,.pptx"
                            required hidden />
                            <span>Select PDF File</span>
                        </label>
                        <div class="selected-file" id="selectedFile">No file selected</div>
                        <div class="error-message" id="errorMessage"></div>

                        <button type="submit" class="submit-btn" id="submitBtn" disabled>CONVERT</button>
                    </form>
                </div>
            </div>
        </div>

        <script>
        const fileInput = document.getElementById('pdfFile');
        const selectedFile = document.getElementById('selectedFile');
        const conversionFile = document.getElementById('conversionFile');
        const errorMessage = document.getElementById('errorMessage');
        const submitBtn = document.getElementById('submitBtn');

        fileInput.addEventListener('change', function() {
            errorMessage.textContent = '';
            
            if (this.files && this.files.length > 0) {
                const file = this.files[0];
                selectedFile.textContent = file.name;
                submitBtn.disabled = false;
            } else {
                selectedFile.textContent = 'No file selected';
                submitBtn.disabled = true;
            }
        });
                        
        </script>
    </body>
</html>

